.Side-bar
  .Side-bar__header
    .Side-bar__textbox
      %h3.Side-bar__useruame  
        = current_user.name
      %ul.Side-bar__iconlist  
        %li.Side-bar__iconlist__new-group
          = link_to new_group_path  do
            = icon('far', 'edit', class: 'icon')
        %li.Side-bar__iconlist__edit-user
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'usericon')
  .Sede-bar__list
    - current_user.groups.each do |group|
      .Group
        = link_to group_messages_path(group) do
          .Group-name
            = group.name
          .Group-messages
            = group.show_last_message
